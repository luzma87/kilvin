  gem 'awesome_print', require: 'ap'
  gem 'shotgun'
  gem 'rubocop', require: false
  gem 'rubocop-rspec'
end

group :test do
  gem 'rspec'
  gem 'rack-test'
  gem 'capybara'
  gem 'ffaker'
  gem 'poltergeist'
  gem 'factory_girl'
  gem 'capybara-screenshot'
  gem 'selenium-webdriver'
